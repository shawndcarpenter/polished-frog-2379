<h1><%= @doctor.name%></h1>
<p>Specialty: <%= @doctor.specialty%></p>
<p>University: <%= @doctor.university %></p>
<p>Hospital: <%= @doctor.hospital_name %></p>
<h3>Patients</h3>
<ul>
  <% @patients.each do |patient| %>
    <div id="patient-<%= patient.id %>">
      <li><p><%= patient.name %></p></li>
      <%= button_to "Remove from Doctor's Caseload", "/doctors/#{@doctor.id}/patients/#{patient.id}", method: :delete %>
    </div>
  <% end %>
</ul>